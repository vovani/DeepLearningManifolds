# double edges and put problem line in front 
# the -1, 555 and 999 are sorting indices 

$1 == "p"  {print "-1", $3, 2*$4}
$1 == "e"  {src = $2; dst = $3; cost = $4;
            degree[src]++;
            degree[dst]++;

            print src, 999, dst, cost;  
            print dst, 999, src, cost;
	}
END { for (i in degree) { print i, 555, degree[i], 0, 0 } 
}

